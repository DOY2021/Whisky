#!/bin/bash

NAME="school"                                             # Django Project Name
DJANGODIR=/home/b0b/djenv/school                        # Django Project Directory
SOCKFILE=/home/b0b/djenv/school/run/gunicorn.sock     # Gunicorn Sock File
USER=b0b                                                # Django Project Running under user vagrant
GROUP=wheel
NUM_WORKERS=3
DJANGO_SETTINGS_MODULE=school.settings                     # change 'myproject' with your project name
DJANGO_WSGI_MODULE=school.wsgi                             # change 'myproject' with your project name

echo "Starting $NAME as `whoami`"

# Activate the virtual environment
cd $DJANGODIR
source ../bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec ../bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
--name $NAME \
--workers $NUM_WORKERS \
--user=$USER --group=$GROUP \
--bind=unix:$SOCKFILE \
--log-level=debug \
--log-file=-
